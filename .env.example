VLM_MODEL_NAME="your_vlm_model_name"                   # VLM model identifier
VLM_API_KEY=your_token_here                            # Optional: API key for VLM server

# APIS FOR MEMORY SYSTEMS
LLM_BASE_URL=http://localhost:55120/v1
LLM_API_KEY=your_token_here
LLM_MODEL_NAME=model_name
EMB_BASE_URL=http://localhost:5504/v1
EMB_API_KEY=your_token_here
EMB_MODEL_NAME=chat_model
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=mem0_collection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j
VOCABULARY_DB_HOST=192.168.0.43
VOCABULARY_DB_PORT=5432
VOCABULARY_DB_NAME=memory_vocab
